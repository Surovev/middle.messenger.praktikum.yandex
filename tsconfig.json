{
   "compilerOptions": {
      "outDir": "dist",
      "declaration": false,
      "strictNullChecks": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "target": "es2016",                         
      "module": "commonjs",                               
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,           
      "strict": true,                                     
      
      "skipLibCheck": true,
    
      "lib": [
        "ESNext",
        "DOM",
      ],
  }
,
"include": [
  "./**/*.ts"
],
"exclude": ["node_modules", "src/**/*.spec.ts"],

}