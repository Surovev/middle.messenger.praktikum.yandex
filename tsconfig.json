{
  "include": ["./**/*.ts", "src/**/*", "src/index.spec.ts"],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ], 
    "outDir": "lib", 
    "removeComments": true, 
    "target": "es2016", 

    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "paths": {}, 
    "useUnknownInCatchVariables": false,

    "sourceMap": true,
    "sourceRoot": "/", 

    "alwaysStrict": true, 
    "allowUnreachableCode": false, 

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  }
}
